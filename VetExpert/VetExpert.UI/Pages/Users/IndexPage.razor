@page "/users"
@inherits IndexPageBase

<PageTitle>Users</PageTitle>
<link href='https://fonts.googleapis.com/css?family=Acme' rel='stylesheet'>

<div class="d-flex flex-row">
	<div class="d-flex flex-column">
		<h1>Users</h1>
	</div>
	<button class="btn btn-primary btn-lg btn-icon ms-auto" style="height: 3rem" @onclick="OnAddButtonClick">
		<i class="oi oi-plus" aria-hidden="true"></i> Add user
	</button>
</div>


@if (Users != null && Users.Count > 0)
{
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Address</th>
				<th>Email</th>
				<th>Phone Number</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (User user in Users)
			{
				<tr>
					<td>@user.Name</td>
					<td>@user.Address</td>
					<td>@user.Email</td>
					<td>@user.PhoneNumber</td>
					<td>
						<div class="d-flex flex-row align-items-center">
							<button class="btn btn-light btn-circle px-2 mr-2" @onclick="(() => OnEditButtonClick(user))">
								<i class="oi oi-pencil"></i>
							</button>
							<button class="btn btn-light btn-circle px-2" @onclick="(async () => await OnDeleteAsync(user))">
								<i class="oi oi-trash"></i>
							</button>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
}

@if (ShowUserForm)
{
	<h3 class="mt-4">Add/Edit User:</h3>

	<EditForm Model="User" OnValidSubmit="OnValidSubmitAsync">
		<DataAnnotationsValidator />
		<ValidationSummary />
		<div class="row">
			<div class="form-group col-6 mt-3">
				<label>Name</label>
				<InputText class="form-control form-control-lg w-100" @bind-Value="User.Name" />
			</div>
			<div class="form-group col-6 mt-3">
				<label>Address</label>
				<InputText class="form-control form-control-lg w-100" @bind-Value="User.Address" />
			</div>
			<div class="form-group col-6 mt-3">
				<label>Email</label>
				<InputText class="form-control form-control-lg w-100" @bind-Value="User.Email" />
			</div>
			<div class="form-group col-6 mt-3">
				<label>Phone Number</label>
				<InputText class="form-control form-control-lg w-100" @bind-Value="User.PhoneNumber" />
			</div>
		</div>

		<div class="d-flex flex-row-reverse mt-3">
			<button class="btn btn-primary btn-lg btn-icon" type="submit">
				<i class="oi oi-plus" aria-hidden="true"></i> Save
			</button>
			<button class="btn btn-secondary btn-lg btn-icon me-2" @onclick="OnCancelButtonClick">
				<i class="oi oi-x" aria-hidden="true"></i> Cancel
			</button>
		</div>
	</EditForm>
}
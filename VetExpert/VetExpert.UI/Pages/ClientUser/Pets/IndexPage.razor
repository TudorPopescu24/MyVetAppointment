@page "/client/pets"
@inherits IndexPageBase
@attribute [Authorize(Roles = UserRole.User)]

<PageTitle>Pets</PageTitle>
<link href='https://fonts.googleapis.com/css?family=Acme' rel='stylesheet'>
<div class="d-flex flex-row">
	<div class="d-flex flex-column">
		<h1>Pets</h1>
	</div>
</div>


@if (Pets != null && Pets.Count > 0)
{
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Type of Pet</th>
				<th>Weight</th>
				<th>Age</th>
				<th>Vaccinated</th>
				<th>Date of Vaccine</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Pet pet in Pets) 
			{
				<tr>
					<td>@pet.Name</td>
					<td>@pet.TypeOfPet</td>
					<td>@pet.Weight</td>
					<td>@pet.Age</td>
					<td>@pet.IsVaccinated</td>
					<td>@pet.DateOfVaccine</td>
					<td>
						<div class="d-flex flex-row align-items-center">
									<button class="btn btn-light btn-circle px-2 me-2" title="Edit pet" @onclick="(() => OnEditButtonClick(pet))">
										<i class="oi oi-pencil"></i>
									</button>
									<button class="btn btn-light btn-circle px-2" tile="Delete pet" @onclick="(async () => await OnDeleteAsync(pet))">
										<i class="oi oi-trash"></i>
									</button>
								</div>
							</td>
				</tr>
			}
		</tbody>
	</table>
}

@if (ShowPetForm)
{
	<h3 class="mt-4">Add Pet for User:</h3>

	<EditForm Model="Pet" OnValidSubmit="OnValidSubmitAsync">
		<DataAnnotationsValidator />
		<ValidationSummary />
		<div class="row">
			<div class="form-group col-6 mt-3">
				<label>Name</label>
				<InputText class="form-control form-control-lg w-100" @bind-Value="Pet.Name" />
			</div>
			<div class="form-group col-6 mt-3">
				<label>Type of Pet</label>
				<InputText class="form-control form-control-lg w-100" @bind-Value="Pet.TypeOfPet" />
			</div>
			<div class="form-group col-6 mt-3">
				<label>Weight</label>
				<InputNumber class="form-control form-control-lg w-100" @bind-Value="Pet.Weight" />
			</div>
			<div class="form-group col-6 mt-3">
				<label>Age</label>
				<InputNumber class="form-control form-control-lg w-100" @bind-Value="Pet.Age" />
			</div>
			<div class="form-group col-6 mt-3">
				<label>Vaccinated</label>
				<label class="container">
					Vaccinated
					<InputCheckbox class="checkmark" @bind-Value="Pet.IsVaccinated" />
				</label>
			</div>
			<div class="form-group col-6 mt-3">
				<label>Date of Vaccine</label>
				<InputDate class="form-control form-control-lg w-100" @bind-Value="Pet.DateOfVaccine" />
			</div>
		</div>

		<div class="d-flex flex-row-reverse mt-3">
			<button class="btn btn-primary btn-lg btn-icon" type="submit">
				<i class="oi oi-plus" aria-hidden="true"></i> Save
			</button>
			<button class="btn btn-secondary btn-lg btn-icon me-2" @onclick="OnCancelButtonClick">
				<i class="oi oi-x" aria-hidden="true"></i> Cancel
			</button>
		</div>
	</EditForm>
}

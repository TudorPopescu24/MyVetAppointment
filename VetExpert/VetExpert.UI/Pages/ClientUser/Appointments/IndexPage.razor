@page "/client/appointments"
@inherits IndexPageBase
@attribute [Authorize(Roles = UserRole.User)]

<PageTitle>Appointments</PageTitle>

<div class="d-flex flex-row">
	<div class="d-flex flex-column">
		<h1>Appointments</h1>
	</div>
	<button class="btn btn-primary btn-lg btn-icon ms-auto" style="height: 3rem" @*@onclick="OnAddButtonClick"*@>
		<i class="oi oi-plus" aria-hidden="true"></i> Add appointment
	</button>
</div>

@if (Appointments == null)
{
	<Loader></Loader>
}
else
{
	<div class="box-2">
		<table class="table">
			<thead>
			<tr>
				<th>Date</th>
				<th>Time</th>
				<th>Pet</th>
				<th>Doctor</th>
				<th>Confirmed</th>
				<th>Actions</th>
			</tr>
			</thead>
			<tbody>
			@foreach (Appointment appointment in Appointments)
			{
				<tr>
					<td>@appointment.DateTime.ToString("dd-MM-yyyy")</td>
					<td>@appointment.DateTime.ToString("hh:mm")</td>
					<td>@appointment.Pet.Name</td>
					<td>@appointment.Doctor.LastName @appointment.Doctor.FirstName</td>
					<td>@appointment.IsConfirmed</td>
					<td>
						<div class="d-flex flex-row align-items-center">
							<button class="btn btn-light btn-circle px-2 me-2" @*@onclick=""*@>
								<i class="bi bi-pencil"></i>
							</button>
							<button class="btn btn-light btn-circle px-2" @*@onclick=""*@>
								<i class="bi bi-trash"></i>
							</button>
						</div>
					</td>
				</tr>
			}
			</tbody>
		</table>
	</div>
}